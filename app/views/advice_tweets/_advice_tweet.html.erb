<div id="<%= dom_id advice_tweet %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= advice_tweet.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= advice_tweet.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this advice tweet", user_advice_tweet_path(@user, advice_tweet), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this advice tweet', edit_user_advice_tweet_path(@user, advice_tweet), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
