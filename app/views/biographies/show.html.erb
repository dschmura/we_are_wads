<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @biography %>
    <%= link_to 'Edit this biography', edit_user_biography_path(@user, @biography), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %> 

    <div class="inline-block ml-2">

      <%= button_to 'Destroy this biography', user_biography_path(@user, @biography), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to biographies', user_biographies_path(@user), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
