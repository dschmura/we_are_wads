<%= form_with(model: [@user, biography], class: "contents") do |form| %>
  <% if biography.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(biography.errors.count, "error") %> prohibited this biography from being saved:</h2>

      <ul>
        <% biography.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 p-4 w-full">
    <%= form.label :title %>
    <%= form.text_field :title, class: "bg-sky-50 block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 p-4 w-full">
    <%= form.label :work_focus, "What are you focussed on at work?" %>
    <div class="bg-sky-50 p-4" >
      <%= form.rich_text_area :work_focus, class: "block shadow bg-sky-50 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full h-48" %>
    </div>
  </div>

  <hr class="bg-sky-700 h-1 my-5" />

   <div class="my-5 p-4 w-full">
    <%= form.label :joining_umich_story, "How did you come to be at the University of Michigan?" %>
    <div class="bg-sky-50 p-4" >
      <%= form.rich_text_area :joining_umich_story, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 h-64 w-full" %>
      </div>
  </div>

  <div class="my-5 hidden">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
