<div id="<%= dom_id hobby %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= hobby.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= hobby.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= hobby.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this hobby", user_hobby_path(@user, hobby), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this hobby', edit_user_hobby_path(@user, hobby), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
