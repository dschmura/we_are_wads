<div id="<%= dom_id quirk %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= quirk.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= quirk.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= quirk.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this quirk", quirk, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this quirk', edit_quirk_path(quirk), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
