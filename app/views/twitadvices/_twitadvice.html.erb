<div id="<%= dom_id twitadvice %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Advice:</strong>
    <%= twitadvice.advice %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= twitadvice.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this twitadvice", twitadvice, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this twitadvice', edit_twitadvice_path(twitadvice), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
